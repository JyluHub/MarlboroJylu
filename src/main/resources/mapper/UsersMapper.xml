<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jylu.dao.UsersMapper">

    <resultMap id="user" type="users">
        <id property="id" column="id" />
        <result property="userName" column="user_name" />
        <result property="nikeName" column="nike_name" />
        <result property="age" column="age" />
        <result property="password" column="password" />
        <result property="email" column="email" />
    </resultMap>

    <select id="selectUserById" parameterType="Integer" resultMap="user">
        SELECT DISTINCT * FROM users WHERE id = #{value}
    </select>

    <insert id="insertUser" parameterType="users">
        <selectKey keyProperty="id" order="AFTER" resultType="Integer">
            SELECT LAST_INSERT_ID()
        </selectKey>
        INSERT INTO users(user_name, nike_name, password, age, email)
        VALUES (#{userName}, #{nikeName}, #{password}, #{age}, #{email})
    </insert>

</mapper>